<!-- Multi Tabs Details Modal -->
<div class="modal" id="details-modal" tabindex="-1" role="dialog" aria-labelledby="document-details-modal">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content bg-light">
            <div class="modal-header">
                <span id="prev-control" class="modal-control bi bi-chevron-left" title="Previous result if any"></span>
                <span id="next-control" class="modal-control bi bi-chevron-right" title="Next result if any"></span>
                <div id="document-quick-actions"></div>
                <div class="col document-details-header" id="document-details"></div>
                <div class="col">
                    <ul id="details-pivot-links" class="nav nav-tabs bg-light" role="tablist"></ul>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="details-modal-body">
                <div class="row" class="h-100">
                    <div id="details-pivot" class="col-md-12">
                        <div id="details-pivot-content" class="tab-content"></div>
                    </div>
                    <input id="result-id" type="hidden" />
                    <input id="result-idx" type="hidden" />
                </div>
            </div>
            @*<div class="modal-footer"></div>*@
        </div>
    </div>
</div>
